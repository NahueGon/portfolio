---

export interface Props {
    company: string
    rol: string
    description: string
    date: string
}
const { company, rol, description, date } = Astro.props;
---

<div class="absolute animate-ping w-3 h-3 rounded-full mt-1.5 -start-1.5 bg-blue-600"></div>
<div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 bg-blue-600"></div>
<time class="mb-1 text-sm font-normal leading-none text-gray-500">{ date }</time>
<h3 class="text-xl font-bold text-orange-600">{ company }</h3>
<h4 class="text-base font-semibold text-blue-600">{ rol }</h4>
<p class="mb-4 text-sm sm:text-base font-normal w-full sm:max-w-xl">{ description }</p>